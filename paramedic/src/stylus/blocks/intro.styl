.intro
  
  &__title
    text-transform uppercase  
    font-weight bold
    font-size 100px
    line-height 150px
    color #fff
    -webkit-font-smoothing antialiased
    margin-bottom 50px

  
  &__subtitle
    text-transform uppercase  
    font-size 24px
    line-height 45px
    color #fff
    
  &__button
    text-transform uppercase
    -webkit-font-smoothing: antialiased;  
    font-size 24px
    line-height 0
    font-weight bold
    color #df1e3a
    text-decoration none
    display inline-block
    padding 36px
    border 3px solid rgba(255, 255, 255, .9)
    background rgba(255, 255, 255, .6)
    border-radius 35px
    position absolute
    bottom 80px
    right 40px

