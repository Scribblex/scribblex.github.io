.top-menu
  centered_flex()
  position fixed
  left 0
  top 0
  width 100%
  padding 30px 0
  background-color rgba(255, 255, 255, .95)
  transition all .15s ease-in
  z-index 5555
  border-bottom 1px solid transparent
  
  &__item
    bold-text()
    font-size 24px
    line-height 0
    color color_red
    width 33.3%
    text-align center
    text-decoration none
    transition color .15s ease-in
    
    &:last-child
      margin-right 0
      
    &:hover
      color color_red_hover
      transition color .3s ease-in
      
  &_scrolled
    background-color rgba(222,232,250,0.95)
    border-bottom 1px solid #DEE8FA
    box-shadow 0px 6px 42px 14px rgba(222,232,250,0.6)
    transition all .3s ease-in

  