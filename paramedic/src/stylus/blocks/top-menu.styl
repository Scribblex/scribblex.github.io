.top-menu
  centered_flex()
  position fixed
  left 0
  top 0
  width 100%
  padding 30px 0
  background rgba(255, 255, 255, .95)
  z-index 5555
  
  &__item
    bold-text()
    font-size 24px
    line-height 0
    color color_red
    width 33.3%
    text-align center
    text-decoration none
    transition color .15s ease-in
    
    &:last-child
      margin-right 0
      
    &:hover
      color color_red_hover
      transition color .3s ease-in

  