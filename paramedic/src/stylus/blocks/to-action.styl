.to-action
  centered_flex()
  margin-top 70px
  background #fcfdfe
  
  &__read
    width 50%
    background #f2f5fb
    padding 12px 33px 0px
    
  &__buy
    bold-text()
    width 50%
    text-align center
    font-size 30px
    line-height 45px
    display block
    
    &:hover
      & .to-action__link
        color color_red_hover
        transition color .3s ease-in
 
  &__link
    display inline-block
    text-decoration none
    color color_red
    text-align left
    transition color .15s ease-in
    padding-right 100px
    background-image url()
    background-position right center
    background-repeat no-repeat

  &__title
    bold-text()
    font-size 30px
    line-height 45px
    color color_red
    margin-bottom 30px
    text-align center
    
  &__item
    font-size 14px
    line-height 20px
    margin-bottom 30px
    color color_text
    
