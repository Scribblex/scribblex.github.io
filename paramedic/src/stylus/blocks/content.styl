.content-single
  width 960px
  margin 30px auto
  
  &_no
    margin 0 auto
  
  &:after, &:before
    content ''
    display table
    clear both
    
.content
  
  h1
    bold-text()
    font-size 45px
    line-height 45px
    color color_red
    margin-bottom 30px

  h2
    bold-text()
    font-size 30px
    line-height 30px
    color color_red
    margin-bottom 30px 
    
  h3
    bold-text()
    font-size 20px
    line-height 20px
    color color_red
    margin-bottom 30px  
    
  h4
    font-size 20px
    line-height 20px
    color color_red
    margin-bottom 30px 
    
  h5
    font-size 18px
    line-height 18px
    color color_red
    margin-bottom 30px
    
  h6
    font-size 16px
    line-height 16px
    color color_red
    margin-bottom 30px
    
  p
    font-size 16px
    line-height 24px
    margin-bottom 30px
    color #464646
    
  ul
    list-style none
    
  li
    font-size 16px
    line-height 24px
    margin-bottom 10px
    